{
  "id": null,
  "title": "Golden Metrics Dashboard",
  "panels": [
    {
      "type": "timeseries",
      "title": "Taxa de Requisições por Segundo (RPS)",
      "targets": [
        {"expr": "sum(rate(http_server_requests_total[1m]))", "refId": "A", "legendFormat": "RPS"}
      ],
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Taxa de Erro (%)",
