        {"expr": "sum(rate(http_server_requests_total{http_status=~\"5..\"}[5m])) / sum(rate(http_server_requests_total[5m])) * 100", "refId": "B", "legendFormat": "Erro (%)"}
      ],
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 10}
    },
    {
      "type": "timeseries",
      "title": "Latência P99 (segundos)",
      "targets": [
        {"expr": "histogram_quantile(0.99, sum(rate(http_server_request_duration_seconds_bucket[5m])) by (le))", "refId": "C", "legendFormat": "P99 Latência (s)"}
