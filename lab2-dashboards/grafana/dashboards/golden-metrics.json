{
  "id": null,
  "title": "Golden Metrics Dashboard",
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests per Second (RPS)",
      "targets": [
        {"expr": "sum(rate(http_server_requests_total[1m]))", "refId": "A"}
      ],
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Error Rate (%)",
      "targets": [
        {"expr": "sum(rate(http_server_requests_total{http_status=~\"5..\"}[5m])) / sum(rate(http_server_requests_total[5m])) * 100", "refId": "B"}
      ],
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 10}
    },
    {
      "type": "timeseries",
      "title": "Latency P99 (seconds)",
      "targets": [
        {"expr": "histogram_quantile(0.99, sum(rate(http_server_request_duration_seconds_bucket[5m])) by (le))", "refId": "C"}
      ],
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 20}
    }
  ],
  "schemaVersion": 38,
  "version": 1
}
